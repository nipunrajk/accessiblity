# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5176

# AI Provider Configuration
# Choose one: openai, anthropic, groq, openrouter, ollama
AI_PROVIDER=openrouter

# AI API Keys (only set the one you're using)
AI_API_KEY=your_api_key_here

# Optional: Specific provider keys
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GROQ_API_KEY=your_groq_key
OPENROUTER_API_KEY=your_openrouter_key

# AI Model Configuration (optional - defaults provided per provider)
AI_MODEL=x-ai/grok-4-fast:free

# Provider-specific models (optional)
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-haiku-20240307
GROQ_MODEL=mixtral-8x7b-32768
OPENROUTER_MODEL=x-ai/grok-4-fast:free

# Ollama Configuration (for local models)
OLLAMA_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434

# GitHub Integration (optional - for automated fixes)
GITHUB_TOKEN=your_github_personal_access_token

# Analysis Configuration (optional)
MAX_PAGES_TO_SCAN=10
ANALYSIS_TIMEOUT=300000
